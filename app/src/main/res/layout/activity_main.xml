<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그 찍어보기" />

    <Button
        android:id="@+id/btnToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="토스트 띄워보기" />

    <Button
        android:id="@+id/btnVariable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="변수 문법 테스트" />

    <Button
        android:id="@+id/btnCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="컨디션문 확인" />
    <Button
        android:id="@+id/btnRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="반복문 테스트" />

    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아무 말이나 입력"/>
    <Button
        android:id="@+id/btnCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위 메시지 복사"/>
    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="17dp"
        android:gravity="center"
        android:text="복사한 내용이 여기에 표시됩니다." />
</LinearLayout>